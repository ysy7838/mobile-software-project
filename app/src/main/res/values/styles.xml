<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- 툴바 스타일 -->
    <style name="Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Actionbar</item>
        <item name="android:actionOverflowButtonStyle">@style/Toolbar.OverFlow</item>
    </style>

    <style name="Toolbar.Actionbar" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Toolbar.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

     <!-- 툴바 내부 텍스트 스타일 -->
    <style name="ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 1번째 페이지 관련 스타일 -->
        <!-- 장소에 적용되는 스타일 -->
        <style name="TripListPlace">
            <item name="android:textColor">@color/mainBlue</item>
            <item name="android:textSize">25sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:paddingEnd">10dp</item>
        </style>

        <!-- 기간에 적용되는 스타일 -->
        <style name="TripListPeriod">
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">15sp</item>
        </style>

    <!-- 3번째 페이지 관련 스타일 -->
        <!-- 체크 리스트 텍스트에 적용되는 스타일 -->
            <style name="CheckList">
                <item name="android:textColor">@color/black</item>
                <item name="android:textSize">15sp</item>
            </style>

            <style name="CheckDelete">
                <item name="android:background">@color/transparency</item>
                <item name="tint">@color/subDiscription</item>
            </style>
</resources>