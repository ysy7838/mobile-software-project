<?xml version="1.0" encoding="utf-8"?>
<!-- 첫 번째 페이지에 적용할 스타일-->
<resources>
    <style name="onClick" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/clickBlue</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">          <!-- 툴바 스타일 -->
        <item name="android:background">@color/mainBlue</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitle">     <!-- 툴바 내부 텍스트 스타일 -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TripListPlace">    <!-- 장소에 적용되는 스타일 -->
        <item name="android:textColor">@color/mainBlue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TripListPeriod">    <!-- 기간에 적용되는 스타일 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>