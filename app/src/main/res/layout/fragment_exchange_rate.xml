<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentExchangeRate"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="40dp"
        >

        <TextView
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12월 19일" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/exchange"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="입력하는 곳"
                android:inputType="number" />

            <Spinner
                android:id="@+id/exchange_select"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/exchange_change"
            style="@style/CheckDelete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:contentDescription="@string/checkDelete"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/down_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/be_exchanged"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="나타나는 곳" />

            <Spinner
                android:id="@+id/be_exchanged_select"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/exchange_chart"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:background="@color/mainBlue" />

    </LinearLayout>
</LinearLayout>